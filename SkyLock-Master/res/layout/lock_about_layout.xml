<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0">
    
    <include android:id="@+id/about_title"
        layout="@layout/title_bar_back"/>
	
    
    <ImageView android:id="@+id/about_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_launcher"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/about_title"
        android:layout_centerHorizontal="true"
        />
    
    <TextView android:id="@+id/about_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#ff404040"
        android:textSize="17sp"
        android:text="@string/app_name"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/about_icon"
        />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_about_info"
        android:layout_margin="15dp"
        android:textColor="#ff707070"
        android:textSize="16sp"
        android:layout_below="@+id/about_name"
        />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_contact_me"
        android:textColor="#ff404040"
        android:textSize="17sp"
        android:layout_above="@+id/about_wel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        />
    
    <TextView android:id="@+id/about_wel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lock_wel_segguest"
        android:textColor="#ff404040"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        />
</RelativeLayout>