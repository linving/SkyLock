<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa0a0a0">
    
    <include android:id="@+id/setpaper_title_layout"
        layout="@layout/title_bar_back_pic"/>
    
    <ImageSwitcher android:id="@+id/setpaper_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/setpaper_title_layout"
    />
    
    <Gallery android:id="@+id/setpaper_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:spacing="1dp"
        android:layout_above="@+id/setpaper_btn"
    />

    <Button android:id="@+id/setpaper_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_drawable"
        android:text="@string/lock_set_wallpaper"
        android:layout_marginLeft="35dp"
        android:paddingBottom="13dp"
        android:paddingTop="11dp"
        android:layout_marginRight="35dp"
        
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff0f0f0"
        android:textSize="16.5sp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>