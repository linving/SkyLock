<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
        
    <style name="title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/setting_title_bg</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="checkbox_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/checkbox_check</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>
    
    <style name="layout_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    
    <style name="imageview_right_arrow_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/card_right_arrow</item>
    </style>
    
    <style name="tv_item_main_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="tv_item_assistant_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lock_assist_tv_color</item>
        <item name="android:textSize">12dp</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="help_title_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/lock_help_tx_padding</item>
        <item name="android:paddingRight">@dimen/lock_help_tx_padding</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3aa600</item>
    </style>
    
    <style name="help_content_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/lock_help_tx_padding</item>
        <item name="android:paddingRight">@dimen/lock_help_tx_padding</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>
    
    <style name="help_line_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#ffa8a8a8</item>
    </style>
    
    <style name="battery_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_drawable</item>
    </style>
</resources>
